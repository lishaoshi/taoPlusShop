/* pages/myCenter/myCenter.wxss */
@import "../../../common.wxss";
page{
  background-color: #f5f5f5;
}
.container{
  width: 100%;
}
.header{
  width: 100%;
  height: 354rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #dddddd;
}
.balance{
  margin-top: 73rpx;
}
.balance-text{
  font-size: 30rpx;
  color: #666666;
  margin-right: 22rpx;
}
.symbol{
  font-size: 46rpx;
  color: #333333;
}
.sum{
  font-size: 73rpx;
  color: #333333;
}
.type{
  margin-top: 70rpx;
}
.cash{
  font-size: 34rpx;
  color: #666666;
  margin-right: 75rpx;
}
.detail{
   font-size: 34rpx;
  color: #666666;
  margin-left: 75rpx;
}
.line{
  color: #dddddd;
}
.center{
  background-color: #ffffff;
  margin-top: 20rpx;
}
.list{
  width: 100%;
  height: 88rpx;
  border-bottom: 1rpx solid #dddddd;
  line-height: 88rpx;
}
.list image{
  width: 30rpx;
  height: 34rpx;
  display: inline-block;
  margin-left: 25rpx;
}
.list text{
  display: inline-block;
  font-size: 32rpx;
  color: #333333;
  margin-left: 26rpx;
}
.last{
  border: none;
  
}