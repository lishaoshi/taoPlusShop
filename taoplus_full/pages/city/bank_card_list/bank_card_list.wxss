/* pages/bank_card_list/bank_card_list.wxss */
@import '../../../common.wxss';
page{
  background-color: #f5f5f5;
}
.bank-list{
  width: 100%;
}
.bank-card{
  width: 680rpx;
  height: 180rpx;
  background-color: #ffffff;
  margin: 20rpx 35rpx;
}
.card-img{
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  background-color: gray;
  margin: 0 30rpx;
}
.card-img image{
  width: 100%;
  height: 100%
}
.card-name{
  font-size: 32rpx;
  color: #333333;
  margin-top: 10rpx;
}
.card-type{
  font-size: 24rpx;
  color: #999999;
}
.card-num{
  font-size: 36rpx;
  color: #333333;
  margin-top: 10rpx;
 
}
.add-bank-car image{
width: 40rpx;
height: 40rpx;
}
.bank-text text{
  font-size: 32rpx;
  color: #fe791d;
  margin-left: 20rpx;
}
.add-bank-car{
  width: 680rpx;
  height: 180rpx;
  line-height: 180rpx;
  background-color: #ffffff;
  margin: 20rpx 35rpx;
}