/*components/table/table.wxss*/
@import '../../common.wxss';

/* 选择餐桌  star  */

.choise-table {
    width: 100%;
    height: 80%;
    box-sizing: border-box;
    position: fixed;
    z-index: 100001;
    bottom: 0;
    left: 0;
    background: #F5F6FA;
    padding: 0 20rpx;
    opacity: 0;

}



.choise-table-head {
    font-size: 28rpx;
    line-height: 1;
    padding: 25rpx 0;
    text-align: right;
    color: #FF6E0B;
}

.choise-table-top {
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 28rpx;
    color: #282828;
    margin-bottom: 20rpx;
    background: #fff;
}

.choise-table-content {
    width: 100%;
     height: 80%; 
    position: relative;
    
}

.choise-table-tab {
    width: 88rpx;
    height: 618rpx;
    background: #282828;
    border-radius: 44rpx;
    overflow-y: scroll;
}

.choise-table-tab-item {
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    line-height: 1;
    color: #fff;
    padding: 85rpx 0;
}

.choise-table-tab-act {
    color: #FF6E0B;
}

.choise-table-list {
    /* margin-left: 88rpx; */
    position: absolute;
    top: 0;
    bottom: 0;
    left: 88rpx;
    right: 0;
    margin: auto;
    overflow-y: scroll;
}

.choise-table-list-item {
    width: 193rpx;
    height: 193rpx;
    background: #fff;
    border-radius: 10rpx;
    margin: 0 0 15rpx 15rpx;
    text-align: center;
    position: relative;
}

.choise-table-list-item-tip {
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    padding: 10rpx;
    line-height: 1;
    font-size: 28rpx;
    border-radius: 10rpx;
    color:#8C8C8C;
    border: 1px solid #8C8C8C;

}

.choise-table-list-item-title {
    font-size: 28rpx;
    color: #4E4E4E;
    line-height: 1;
    padding: 72rpx 0 26rpx 0;
}

.choise-table-list-item-text {
    font-size: 22rpx;
    color: #8C8C8C;
    line-height: 1;
}

.choise-table-list-item-img {
    width: 42rpx;
    height: 42rpx;
    position: absolute;
    left: 74rpx;
    top: 96rpx;
}

.tip-green {
    border-color: green;
    color: green;
}

.tip-orange {
    border-color: #FF6E0B;
    color: #FF6E0B;
}

.tip-gray {
    border-color: #8C8C8C;
    color: #8C8C8C;
}
/* 选择餐桌  end  */