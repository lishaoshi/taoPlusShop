/* pages/goods_detail/goods_detail.wxss */
@import '../../common.wxss';

page {
    background: #f5f5f5;
}

.banner {
    width: 100%;
    height: 750rpx;
}

.header {
    padding: 0 20rpx 10rpx;
    background: #fff;
}

.money-light {
    font-size: 44rpx;
    color: #fd1a3f;
    margin-right: 20rpx;
    font-weight: bold;
}

.money-symbol {
    font-size: 28rpx;
}

.header-top {
    font-size: 26rpx;
    line-height: 85rpx;
    color: #999;
}

.header-bottom {
    font-size: 34rpx;
    color: #333;
    line-height: 60rpx;
}

/* 拼单 star */

.collage {
    background: #fff;
}

.collage-head, .collage-rules {
    padding: 0 20rpx;
    font-size: 30rpx;
    color: #333;
    line-height: 82rpx;
}

.collage-head .more {
    font-size: 28rpx;
    color: #999;
}

.collage-content {
    max-height: 294rpx;
    overflow-y: hidden;
}

.collage-item {
    padding: 0 20rpx;
    line-height: 98rpx;
    height: 98rpx;
}

.collage-item .userinfo {
    width: 270rpx;
    font-size: 28rpx;
    color: #333;
}

.collage-item .userinfo .portrait {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.collage-item .timer {
    height: 98rpx;
    flex: 2;
}

.collage-item .timer-over {
    font-size: 23rpx;
    line-height: 1;
    color: #333;
}

.collage-item .timer-top {
    font-size: 24rpx;
    line-height: 1;
    padding: 18rpx 0 12rpx 0;
    color: #666;
}

.collage-item .timer .red {
    color: #e11b21;
}

.collage-btn {
    height: 98rpx;
    flex-direction: row-reverse;
    font-size: 0;
}

.collage-btn .btn {
    width: 117rpx;
    height: 54rpx;
    background-color: #fe791d;
    border-radius: 8rpx;
    color: #fff;
    font-size: 26rpx;
    line-height: 54rpx;
    /* margin-bottom: 12rpx; */
}

/* 拼单 end */

/* 拼单弹窗 star */

.collage-popup {
    position: fixed;
    left: 20rpx;
    top: 196rpx;
    width: 710rpx;
    z-index: 10000;
}

.popup-head {
    height: 98rpx;
    line-height: 98rpx;
    font-size: 34rpx;
    color: #333;
    position: relative;
    border-top-left-radius: 8rpx;
    border-top-right-radius: 8rpx;
    background: #fff;
}

.popup-close {
    position: absolute;
    top: -30rpx;
    right: -30rpx;
    width: 60rpx;
    height: 60rpx;
}

.popup-content {
    width: 100%;
    height: 538rpx;
    background: #fff;
    overflow-y: scroll;
}

.popup-foot {
    height: 88rpx;
    line-height: 88rpx;
    font-size: 26rpx;
    color: #333;
    background: #fff;
    border-bottom-left-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
}

.popup-content .userinfo {
    width: 250rpx;
}

/* 拼单弹窗 end */

/* 发起人 star */

.user {
    width: 100%;
    padding: 20rpx 20rpx;
    background: #fff;
}

.user-text {
    font-size: 23rpx;
    color: #646464;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
}

.user-img {
    width: 98rpx;
    height: 98rpx;
    border-radius: 50%;
    margin-left: 36rpx;
}

.omit {
    color: #afafaf;
    font-size: 45rpx;
    margin-bottom: 30rpx;
    margin-left: 40rpx;
}

.first {
    width: 98rpx;
    height: 98rpx;
    border-radius: 50%;
    margin-right: 36rpx;
}

.finish-img {
    width: 58rpx;
    height: 27rpx;
    position: absolute;
    z-index: 3;
    left: 105rpx;
    margin-top: 31rpx;
}

.icon {
    align-items: center;
}

.line {
    color: #ddd;
}

.group {
    margin-right: 20rpx;
}

.group-img {
    width: 90rpx;
    height: 38rpx;
    margin-right: 20rpx;
}

/* 发起人 end */

/* 商家地址 star */

.address {
    width: 100%;
    height: 125rpx;
    padding: 30rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
    box-sizing: border-box;
    align-items: center;
}

.shop-name {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    margin-top: 20rpx;
    background-color: #fff;
}

.name-text {
    width: 650rpx;
    display: inline-block;
    margin-left: 40rpx;
    color: #333;
    font-size: 30rpx;
}

.w-80 {
    width: 80%;
}

.position {
    display: block;
    width: 80rpx;
    height: 48rpx;
    margin-top: 13rpx;
    box-sizing: border-box;
    margin-right: 15rpx;
    float: left;
}

.phone {
    width: 82rpx;
    height: 50rpx;
    display: iblock;
    margin-top: 11rpx;
    box-sizing: border-box;
}

.address-text {
    width: 488rpx;
    /* display: inline-block; */
    float: left;
    color: #333;
    font-size: 26rpx;
}

.address-real {
    color: #999;
}

/* 商家地址 end */

/* 商品详情 star */

.goods-detail {
    background: #fff;
    padding-bottom: 100rpx;
}

.goods-detail-title {
    line-height: 80rpx;
    font-size: 32rpx;
    padding: 0 20rpx;
    color: #333;
}

.goods-detail-content {
    padding: 20rpx;
    font-size: 28rpx;
    color: #333;
    line-height: 48rpx;
}

.goods-des {
    margin-bottom: 20rpx;
}

.goods-detail-content .goods-img {
    width: 100%;
}

/* 商品详情 end */

/* 购买栏 star */

.buy-bar {
    position: fixed;
    left: 0;
    bottom: 0;
    z-index: 1;
    width: 100%;
    height: 130rpx;
    line-height: 130rpx;
    background: #fff;
    border-top: 1rpx solid #e2e2e2;
}

.group-btn {
    width: 260rpx;
    height: 82rpx;
    line-height: 82rpx;
    margin-top: 24rpx;
    box-sizing: border-box;
    text-align: center;
    border-radius: 8rpx;
    background-color: #fe791d;
}

.group-btn-text {
    font-size: 34rpx;
    color: #fefefe;
}

.time {
    color: #111;
    font-size: 34rpx;
}

/* 购买栏 end */

.sales-text {
    font-size: 24rpx;
}

.sales-num {
    font-size: 26rpx;
}

.block {
    display: block;
}

.hide {
    display: none;
}

.gray {
    background: #eee;
    color: #ccc;
}
.groupon_sum {
height:20rpx;
line-height:20rpx;
color: #fff;
padding:5rpx;
margin-right:30rpx;
background-color:#FE2E2E;
font-size:22rpx;
font-weight:500;

}