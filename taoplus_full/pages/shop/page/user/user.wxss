/* pages/user/user.wxss */

@import '../../common.wxss';

.user-head {
    width: 100%;
    height: 353rpx;
    border-radius: 15rpx;
    text-align: center;
    background: #FF6B07;
    color: #fff;
    font-size: 38rpx;
    margin: 20rpx 0 50rpx 0;
    border: 1px solid transparent;
}

.user-head-img {
    width: 163rpx;
    height: 163rpx;
    border-radius: 50%;
    margin-top: 60rpx;
    margin-bottom: 16rpx;
}

.user-list {
    padding: 15rpx 29rpx;
}

.user-list-item {
    line-height: 35rpx;
    padding: 25rpx 0 25rpx 0;
    font-size: 30rpx;
    color: #3F3F3F;
}

.user-list-item-img {
    width: 38rpx;
    height: 38rpx;
    margin-right: 17rpx;
}

.user-list-item-icon {
    width: 10rpx;
    height: 18rpx;
}

.getInfoBtn {
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    background: #fff;
    color: #FF6B07;
    border: none;
    margin-top: 100rpx;
}

