  width: 90%;
  font-size: 28rpx;
  color: #3f3f3f;
  padding: 25rpx 0 30rpx 0;
  line-height: 50rpx;
}

.has-address-bottom {
  font-size: 25rpx;
}

.submit-head-item-text {
  margin-right: 15rpx;
}

.address-class {
  height: 123rpx;
  line-height: 123rpx;
}

.w-70 {
  width: 70%;
}

.w-60 {
  width: 60%;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-content: center;
}

.w-40 {
  width: 35%;
  margin-top: 22rpx;
}

.h-60 {
  height: 60rpx;
  line-height: 60rpx;
}

.line {
  color: #eee;
  width: 1rpx;
  height: 3rpx;
}

.foot .pay_sure {
  margin-left: 16rpx;
}
