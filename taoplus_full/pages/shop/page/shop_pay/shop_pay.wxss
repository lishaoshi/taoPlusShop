/* pages/shop_pay/shop_pay.wxss */
@import '../../common.wxss';
page {
    background: #f5f5f5; 
}
.container{
    padding: 30rpx;
}
.pay{
    background-color: #ffffff;
    padding: 50rpx;
}
.shop-pay{
    font-size: 32rpx;
}
.shop-name,.sum-text{
    font-size: 28rpx;
    color: #aaa;
    margin-top: 20rpx;
}
.sum-text{
    font-size: 28rpx;
    color: #aaa;
     margin-bottom: 20rpx;
}
.pay-sum{
    margin-top: 100rpx;
   
}
.money{
    margin-left: 20rpx;
    outline: none;
    font-size: 48rpx;
    margin-top: 10rpx;
    height:80rpx;
}
.money-symbol{
    font-size: 48rpx;
}
.pay-btn{
    margin-top: 50rpx;
    border-radius: 50rpx;
    background-color: #fe791d;
    color: #ffffff;
}
.pay-money{
    align-items: center;
}
.bind-phone-box {
    width: 600rpx;
    box-sizing: border-box;
    padding: 40rpx 40rpx 15rpx 40rpx;
    font-size: 32rpx;
    color: #333;
    line-height: 2;
    left: 50%;
    top: 50%;
    margin-left: -300rpx;
    margin-top: -200rpx;
    z-index: 100000;
    background: #fff;
    border-radius: 4rpx;
}

.content {
    height: 110rpx;
    line-height: 55rpx;
    font-size: 34rpx;
    text-align: justify;
}
.authorization {
    height: 96rpx;
    color: #eb6306;
    font-size: 34rpx;
    float: left;
    line-height: 96rpx;
    border-top: 1rpx solid #efefef;
    margin-top: 40rpx;
    background: #fff;
    border-radius: 0;
    width: 100%;
}

/* 实付 */
.paid{
  position: absolute;
  right:88rpx;
  bottom:-34rpx;
}