/* pages/invite_group/invite_group.wxss */
@import "../../common.wxss";

page {
    background: #f5f5f5;
}

.container {
    width: 100%;
}

.goods-detail {
    margin: 20rpx 30rpx;
    background-color: #fff;
}
.finish-img {
    width: 58rpx;
    height: 27rpx;
    position: absolute;
    z-index: 3;
    left: 100rpx;
}

.goods-img {
    width: 334rpx;
    height: 334rpx;
    margin: 30rpx 40rpx;
    border-radius: 8rpx;
}

.sum {
    align-items: center;
    margin-top: 70rpx;
}

.sum-num {
    color: #ff0d24;
    font-size: 56rpx;
    font-weight: bold;
}

.symbol {
    font-size: 28rpx;
}

.old-price {
    margin-top: 10rpx;
    font-size: 26rpx;
    color: #d7d7d7;
    text-decoration: line-through;
}

.save-price {
    margin-top: 60rpx;
    color: #333;
    font-size: 30rpx;
}

.save-num {
    color: #fe1345;
    font-size: 34rpx;
}

.nane-tex {
    width: 364rpx;
    margin-left: 30rpx;
    margin-bottom: 10rpx;
    color: #111;
    font-size: 34rpx;
}

.all-img {
    width: 520rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    height: 95rpx;
    line-height: 95rpx;
}

.omit {
    color: #afafaf;
    font-size: 45rpx;
    margin-bottom: 30rpx;
    margin-left: 40rpx;
}

.detail {
    width: 608rpx;
    margin-left: 30rpx;
    margin-bottom: 24rpx;
    color: #ccc;
    font-size: 28rpx;
}

.user-portrait {
    height: 210rpx;
    padding-left: 30rpx;
}

.first-img {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin-right: 36rpx;
}

.line {
    margin-top: 10rpx;
    color: #eee;
}

.user-img {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    margin-left: 36rpx;
    display: inline-block;
}

.user-tex {
    color: #646464;
    font-size: 23rpx;
    display: inline-block;
    margin-left: 11rpx;
    margin-top: 43rpx;
    margin-bottom: 20rpx;
}

.invite-btn {
    width: 620rpx;
    height: 88rpx;
    margin: 120rpx auto;
    line-height: 88rpx;
    text-align: center;
    border-radius: 8rpx;
    color: #fff;
    font-size: 34rpx;
}

.invite-tex {
    box-sizing: border-box;
    height: 88rpx;
    background-color: #fe791d;
    color: #fff;
    text-align: center;
    line-height: 88rpx;
}

.gray {
    background: #afafaf;
}
