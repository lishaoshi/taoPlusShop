/* pages/address_list/address_list.wxss */
@import '../../common.wxss';

.address-list {
    padding: 0 32rpx;
}

.address-list-item-info {
    padding: 42rpx 0 32rpx 0;
}

.address-list-item-info-img {
    width: 33rpx;
    height: 33rpx;
    margin-right: 12rpx;
}

.address-list-item-info-text-bottom {
    font-size: 25rpx;
}

.address-list-item-info-text {
    font-size: 33rpx;
    color: #3f3f3f;
    line-height: 50rpx;
    width: 85%;
}

.address-list-item-edit {
    width: 30rpx;
    height: 34rpx;

}

.edit-icon {
    width: 10%;
    text-align: center;
    padding:42rpx 0 32rpx 0;

}

.add-address {
    width: 670rpx;
    height: 100rpx;
    position: fixed;
    z-index: 999;
    left: 42rpx;
    bottom: 42rpx;
    background: #282828;
    text-align: center;
    font-size: 33rpx;
    color: #fff;
    line-height: 100rpx;
    border-radius: 50rpx;
}

.no-address-view {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: #f5f5f5;
    text-align: center;
    color: #c4c4c4;
    font-size: 28rpx;
}

.no-address-img {
    width: 276rpx;
    height: 182rpx;
    margin-top: 328rpx;
    margin-bottom: 56rpx;
}

.tip {
    font-size: 25rpx;
    line-height: 60rpx;
    padding-left: 30rpx;
}
