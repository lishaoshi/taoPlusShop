/* pages/order_success/order_success.wxss */
@import '../../common.wxss';
page {
    
    overflow-y: hidden;
}
.container{
  width: 100%;
}
.buy-success{
  width: 100%;
  text-align: center
}
.buy{
  color: #333333;
  font-size: 40rpx;
  display: block;
  font-weight: bold;
}
.buy-type{
  color: #d7d7d7;
  font-size: 26rpx;
  display: inline-block;
  margin-top: 20rpx;
}
.code{
  width: 100%;
  margin-top: 96rpx;
}
.code-text{
  margin-left: 83rpx;
  color: #333333;
  font-size: 32rpx;
  font-weight: bold;
}
.share-box {
    position: relative;
    
}
.code-share{
  /* display: inline-block;
  float: right; */
  margin-right: 83rpx;
  color: #00a0fc;
  font-size: 32rpx;
  border: none;
}
.code-share-btn {
    position: absolute;
    z-index: 1;
    left: 0;
    top: 0;
    opacity: 0;
    width: 100%;
    height: 100%;
}

.share-btn {
    width:50%;
    margin:50rpx auto;
}
.code-num{
  width: 100%;
  margin-top: 70rpx;
  text-align: center;
}
.code-num text{
  display: inline-block;
  
  font-size: 52rpx;
  color: #fe791d;
}

 .code-header { 
   width: 80%;
   display: inline-block;
    text-align: center;
  margin: 0rpx auto;
} 

.code-end {
    margin-left: 20rpx;
}
.goodsId{
  width: 100%;
}
.all-code{
  margin-top: 60rpx;
}
.code-img{
  width: 568rpx;
  /* height: auto; */
  text-align: center;
  margin: 0rpx auto;
  height:568rpx;

}
.success{
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  text-align: center;
  position: fixed;
  bottom: 0rpx;
  background-color: #fe791d;
}
.success-text{
font-size: 36rpx;
color: #ffffff;
}