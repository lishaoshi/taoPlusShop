/* pages/search/search.wxss */
@import '../../common.wxss';

page {
    background: #f5f5f5;
}

.search-header {
    padding: 20rpx;
    box-sizing: border-box;
    width: 100%;
    background: #fff;
}

.search-box {
    width: 100%;
    height: 64rpx;
    line-height: 64rpx;
    border-radius: 32rpx;
    background-color: #f4f4f4;
}

.search-icon {
    margin-left: 26rpx;
    width: 26rpx;
    height: 27rpx;
}

.search-input {
    width: 600rpx;
    height: 64rpx;
    border: none;
    font-size: 28rpx;
    margin-left:20rpx;
}

/* 最近搜索 start */

.history {
    padding: 108rpx 20rpx 0;
}

.history-head {
    line-height: 82rpx;
    font-size: 28rpx;
    color: #999;
}

.hot-search-icon {
    width: 28rpx;
    height: 28rpx;
}

.history-item {
    font-size: 28rpx;
    line-height: 1;
    color: #333;
    max-width: 260rpx;
    padding: 17rpx 23rpx;
    border-radius: 8rpx;
    background-color: #f4f4f4;
    margin: 0 20rpx 20rpx 0;
}

.del-search-icon {
    width: 28rpx;
    height: 30rpx;
}

/* 最近搜索 end */

.list {
    padding-top: 108rpx;
}

.list-item {
    padding: 0 20rpx 26rpx 20rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.list-item-head {
    height: 74rpx;
    line-height: 74rpx;
    font-size: 26rpx;
    color: #999;
}

.list-item-head .shopname {
    font-size: 30rpx;
}

.list-item-head .shop-icon {
    width: 35rpx;
    height: 35rpx;
    margin-right: 9rpx;
}

.list-item-img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 8rpx;
    margin-right: 22rpx;
}

.list-item-info {
    /* width: 430rpx; */
    height: 210rpx;
    font-size: 28rpx;
    line-height: 48rpx;
    color: #999;
}

.list-item-info .title {
    font-size: 32rpx;
    line-height: 52rpx;
    color: #333;
    width: 500rpx;
}

.money-light {
    font-size: 38rpx;
    color: #fd142a;
    font-weight: bold;
}

.money-dark {
    font-size: 26rpx;
    color: #ccc;
    margin-right: 20rpx;
    text-decoration: line-through;
}

.money-dark .money-symbol {
    font-size: 26rpx;
}



.group-img {
    width: 101rpx;
    height: 43rpx;
    display: inline-block;
}

.group-text {
    width: 300rpx;
    color: #ccc;
    font-size: 22rpx;
}

.group-num {
    font-size: 26rpx;
}
.groupon-list-img{
    position: relative;
}
.groupon_sum{
    width: 70rpx;
    position: absolute;
    top: 0rpx;
    display: inline-block;
    text-align: center;
    height: 20rpx;
    line-height: 20rpx;
    color: #fff;
    padding: 5rpx;
    background-color: #FE2E2E;
    font-size: 22rpx;
    font-weight: 500;
}

.described {
    width: 200rpx;
    height: 50rpx;
}
.shop-name-text {
width:500rpx;
display:inline-block;
}
.unit-symbols{
    margin-left: 10rpx;
    font-size: 20rpx;
    margin-right: 5rpx;
}
.unit-price{
    color: #ccc;
    font-size: 22rpx;
}
.unit-price-num{
   font-size: 26rpx; 
}
.groupon-left{
    margin-top: 10rpx;
    height: 50rpx;
    align-items: center;
}
.groupon-real{
    font-size: 22rpx;
    color: #ccc;
}
.group-buy-logo{
     width: 158rpx;
    height: 70rpx;
    display: inline-block;
    margin-right: 22rpx;
}
.old-price{
    text-decoration: line-through;
    color: #ccc;
    font-size: 26rpx;
    font-weight: 500;
    margin-left: 10rpx;
    margin-top: 5rpx;
}
