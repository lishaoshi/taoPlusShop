/* pages/address_list/address_list.wxss */
@import '../../common.wxss';
 page{
   background-color: #f5f5f5;
 }
 #container{
   width: 100%;
 }
 .address{
   width: 100%;
 margin-top: 20rpx;
   background-color: #ffffff;
 }
 .detail-all{
   width: 100%;
 }
 .address-name text{
   display: inline-block;
   margin-top: 26rpx;
   margin-bottom: 23rpx;
   font-size: 32rpx;
   color: #333333;
 }
.address-left{
  margin-left: 20rpx;
}
.address-right{
  float: right;
  margin-right: 30rpx;
}
.address-detail{
margin-left: 20rpx;
margin-right: 86rpx;
margin-bottom: 26rpx;
}
.address-detail text{
font-size: 28rpx;
color: #999999;
}
.address-default{
  width: 96%;
  height: 88rpx;
  line-height: 88rpx;
  border-top: 1rpx solid #dddddd;
 margin: 0 auto;
}
.a{
  font-size: 30rpx;
  color: #f36300;
  margin-left: 20rpx;
}
.b{
  font-size: 30rpx;
  color: #333333;
  margin-left: 20rpx;
}
.add-address{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  height: 96rpx;
  margin: 0rpx auto;
  text-align: center;
  line-height: 96rpx;
  background-color: #fe791d;
}
.add-address navigator{
  font-size: 36rpx;
  color: #ffffff;
}

.manag-address{
 position: relative;
 left: 283rpx;
}
.address-delete{
  margin-left: 32rpx;
}
.address-edit image, .address-delete image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx; 
}
.address-edit text, .address-delete text{
  display: inline-block;
  font-size: 28rpx;
  color: #333333;
  border: none;

}
.img-path{
  width: 40rpx;
  height: 40rpx;
  
}

