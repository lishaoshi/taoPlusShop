/* pages/marketing/marketing.wxss */
@import '../../common.wxss';

page {
    background: #f5f5f5;
}

/* 头部导航 star  */

.flex-item {
    flex: 1;
}

.bar-box {
    width: 100%;
    height: 76rpx;
    line-height: 76rpx;
    font-size: 30rpx;
    color: #333;
    background: #fff;
    left: 0;
    top: 0;
}

.select-bar {
    color: #fe791d !important;
}

.bar-item {
    position: relative;
}

/* .bar-act {
    color: #fe791d;
} */

.bar-line {
    width: 100%;
    height: 6rpx;
    background: #fe791d;
    position: absolute;
    left: 0;
    bottom: -20rpx;
}

/* 头部导航 end  */

/* 列表 star  */

.order-list {
    margin-top: 96rpx;
}

.order {
    width: 94%;
    background: #fff;
    margin-top: 20rpx;
    padding: 2% 3%;
    color: #333;
}

.shop-name {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 28rpx;
    border-bottom: 0.5rpx solid #ddd;
}

.list {
    width: 95%;
    height: 70rpx;
    line-height: 70rpx;
    margin: 0 10px;
}

.name {
    font-size: 28rpx;
    color: #222;
    width: 200rpx;
}

.right-title {
    font-size: 26rpx;
    color: #999;
}

.status {
    color: #00a0fc;
    font-size: 28rpx;
    margin-left: 20rpx;
}

.grounp {
    font-size: 32rpx;
    color: #f36300;
}

.grounp-text {
    color: #111;
}

.number {
    font-size: 32rpx !important;
    color: #f36300 !important;
    margin-left: 40rpx;
}

.time {
    font-size: 26rpx;
    color: #999;
}

.count-out {
    font-size: 28rpx;
    color: #111;
    margin-right: 10rpx;
}

.w-80 {
    /* width: 90%;
    padding: 0 5%; */
    width: 95%;
    padding: 0 5% 0 0;
}

.m-20 {
    margin-right: 40rpx;
}

/* 列表 end  */
