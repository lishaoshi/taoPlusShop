/* pages/user_detail/user_detail.wxss */
@import '../../common.wxss';
page{
  background-color: #f5f5f5;
}
.head-img{
  width: 100%;
  height: 300rpx;
  text-align: center;
  background-color: #ffffff;
  border-top: 1px solid transparent;
}

.authSetting {
    width: 250rpx;
    margin: 100rpx auto;
    background: #fff;
}
.setup-head-img{
  width: 160rpx;
  height: 160rpx;
  display: inline-block;
  border-radius: 50%;
  margin-top: 60rpx;
  background-color: gray;
}
.user-ceter{
  width: 100%;
  margin-top: 20rpx;
  background-color: #ffffff;
}
.list{
  width: 100%;
  height: 88rpx;
  border-bottom: 1rpx solid #dddddd;
}
.list text{
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #666666;
  width: 150rpx;
}
.array-picker{
  width:500rpx;
 margin-left: 100rpx;
 display: inline-block;
  font-size: 32rpx;
  color: #333333;
}  
.list input{
  margin-left: 100rpx;
  font-size: 32rpx;
  color: #333333;
}
.user-phone{
  border: none;
}
.user-save{
  width: 100%;
  height: 96rpx;
  position: fixed;
  bottom: 0rpx;
  margin:0 auto;
  line-height: 96rpx;
  text-align: center;
  background-color: #fe791d;
}
.user-save text{
  font-size: 36rpx;
  color: #ffffff;
}

