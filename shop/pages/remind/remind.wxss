/* pages/remind/remind.wxss */

@import '../../common.wxss';

/*备注  */
.remarks, .receipt {
    padding: 0 40rpx;
    font-size: 28rpx;
    color: #3F3F3F;
}

.remarks-title, .receipt-title {
    font-size: 30rpx;
    padding: 50rpx 0 45rpx 0;
}

.remarks-textarea {
    width: 100%;
    height: 208rpx;
    font-size: 28rpx;
    line-height: 45rpx;
    color: #8C8C8C;
    background: #F4F3F3;
    padding: 26rpx 28rpx;
    box-sizing: border-box;
    border-radius: 15rpx;
    overflow-y: hidden;
    margin-bottom: 40rpx;
}

.receipt-input-view {
    padding-bottom: 30rpx;
}

.remind-btn {
    width: 670rpx;
    height: 100rpx;
    border-radius: 50rpx;
    background: #282828;
    line-height: 100rpx;
    font-size: 33rpx;
    color: #fff;
    text-align: center;
    margin: 40rpx;
}