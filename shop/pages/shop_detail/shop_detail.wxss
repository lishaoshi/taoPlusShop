/* pages/shop_detail/shop_detail.wxss */
@import '../../common.wxss';

.detail-swiper {
    height: 458rpx;
}


.detail-img {
    width: 100%;
    height: 100%;
}

.detail-head {
    margin: 0 35rpx;
    color: #303030;
    font-size: 33rpx;
    border-bottom: 1px solid #EDEDED;
}

.detail-head-title {
    font-weight: bold;
    margin-top: 35rpx;
    font-size: 34rpx;
}

.detail-head-title-icon {
    width: 42rpx;
    height: 40rpx;
}

.detail-head-money {
    font-weight:700;
    font-size:36rpx;
    color:#fe4c40;
    vertical-align: middle;
}

.detail-head-sale {
    font-size: 23rpx;
    margin: 20rpx 0 35rpx 0;
}

.detail-head-foot {
    line-height: 47rpx;
    margin-bottom: 60rpx;
}

.detail-head-foot-img {
    width: 47rpx;
    height: 47rpx;
}

.detail-head-foot-text {
    padding: 0 25rpx;
}

.detail-info {
    padding: 32rpx;
    margin-bottom: 100rpx;
}

.detail-info-title {
    font-size: 33rpx;
    color: #303030;
    margin-bottom: 20rpx;
}

.detail-info-content {
    font-size: 30rpx;
    line-height: 50rpx;
}