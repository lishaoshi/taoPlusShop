/* pages/add_bank_card/add_bank_card.wxss */
@import '../../common.wxss';

page {
    background-color: #f5f5f5;
}

.title {
    width: 100%;
    height: 88rpx;
}

.title text {
    font-size: 28rpx;
    color: #666;
    display: inline-block;
    margin-left: 20rpx;
}

.list .bank-name {
    width: 200rpx;
    color: #777;
}

.add-bank {
    width: 100%;
    background-color: #fff;
}

.list {
    width: 100%;
    height: 88rpx;
    border-bottom: 1rpx solid #ddd;
}

.list text {
    width: 100rpx;
    font-size: 32rpx;
    color: #333;
    display: inline-block;
    margin-left: 20rpx;
}

.list image {
    width: 45rpx;
    height: 45rpx;
}

.list input {
    font-size: 32rpx;
    color: #333;
    display: inline-block;
    margin-left: 30rpx;
    width: 520rpx;
}

.code-num, .idcard {
    border: none;
}

.code-num {
    width: 100%;
    height: 110rpx;
    line-height: 110rpx;
}

.code-text {
    width: 100rpx;
    font-size: 32rpx;
    color: #333;
    display: inline-block;
    margin-left: 20rpx;
}

.code-num input, .picker {
    font-size: 32rpx;
    color: #333;
    display: inline-block;
    margin-left: 30rpx;
    width: 320rpx;
}

.radio-group {
    font-size: 32rpx;
    color: #333;
    display: inline-block;
}

.radio-group-label {
    margin-left: 30rpx;
}

