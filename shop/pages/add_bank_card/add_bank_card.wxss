.a {
    height: 64rpx;
    line-height: 64rpx;
    font-size: 28rpx;
    color: #999 !important;
    border-radius: 32rpx;
    border-color: #ddd !important;
}

.b {
    height: 64rpx;
    line-height: 64rpx;
    font-size: 28rpx;
    color: #ff4200 !important;
    border-radius: 32rpx;
    border-color: #ddd !important;
}

#phone-code {
    width: 300rpx;
}

.phone {
    width: 100%;
    margin-top: 20rpx;
    background-color: #fff;
}

.button text {
    width: 100%;
    margin-left: 0rpx;
}

.submit {
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    background: #fe791d;
    text-align: center;
    color: #fff;
    font-size: 36rpx;
    position: absolute;
    left: 0;
    bottom: 0;
}
