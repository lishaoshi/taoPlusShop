/* pages/shopMng/index.wxss */
page {
  background: rgba(243, 238, 238, 0.288);
}
.container {
  padding: 0 30rpx;
  margin-top: 20rpx;
  background: #fff;
}
.header {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  height: 54rpx;
  align-items: center;
  border-bottom: 1px solid rgba(224, 221, 221, 0.219);
}
.header image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.header > view:first-child::before {
  content: '|';
  color: rgb(9, 107, 219);
  margin-right: 20rpx;
}
.header > view:first-child > text {
  color: #999;
}
.header>view:last-child {
  display: flex;
  align-items: center;
  color: rgb(9, 107, 219);
}
.info_box > view {
  /* height: 84rpx; */
  align-items: center;
  margin-top:40rpx;
  display: flex;
}
.info_box > view>text:first-child {
  font-size: 28rpx;
  color: #999;
  margin-right: 30rpx;
}
.only {
  margin-left: 24rpx;
}
.info_box > view>text:last-child {
  font-size: 28rpx;
}
.image_box image {
  width: 100%;
  height: 100%;
  
}
.image_box {
  margin-top: 20rpx;
  display: flex;
  padding-bottom: 20rpx;
}
.image_box > view:first-child {
  margin-right: 20rpx;
}
.image_box > view {
  display: flex;
  width: 250rpx;
  height: 180rpx;
}
.botm {
  margin-top: 40rpx;
}
