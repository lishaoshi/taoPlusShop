page{
  display: flex;
  flex-flow: column nowrap;
  height: 100%;
  width: 100%;
}

.container{
  display: flex;
  flex-flow: column nowrap;
  height: 100%;
  width: 100%;
}

.top{
  display: flex;
  flex-flow: column nowrap;
  height: 80%
}

.name{
  display: flex;
  flex-flow: column nowrap;
  height: 3rem;
  margin: 1rem 1rem;
}

.name > input{
  padding: 0.5rem 1rem;
  border-bottom: 1px solid rgba(223, 220, 220, 0.493);
}

.img{
  display: flex;
  flex-flow: column nowrap;
  height: 7rem;
  margin: 1rem 1rem;
}

.img > view{
  margin: 0 1rem;
}

.add,.add_img{
  width: 6rem;
  height: 6rem;
}

.sec{
  display: flex;
  flex-flow: column nowrap;
  height: 2rem;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid rgba(223, 220, 220, 0.493);
  border-top: 1px solid rgba(223, 220, 220, 0.493);
}

.bottom{
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}
.bottom>view{
    display: flex;
    flex-flow: column nowrap;
    justify-content: center;
    align-items: center;
    width: 90%;
    height: 100rpx;
    border-radius: 50rpx;
    background: #0075fa;
    font-size: 40rpx;
    color: #fff;
    text-align: center;
    margin-top: 0.5rem;
}

.bottom >.bottom_delete{
  background: red;
}
.picker {
  color: #999;
}