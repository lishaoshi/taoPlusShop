.container {

}
.heaedr {
  display: flex;
  justify-content: space-around;
  width: 100%;
  align-items: center;
  font-size: 28rpx;
  color: #999;
  height: 60rpx;
}
.activi {
  color: #000;
}
.bg_box {
  background: rgba(221, 212, 212, 0.192);
  height: 20rpx;
  width: 100%;
}
.detail_box {
  display: flex;
  justify-content: space-around;
  font-size: 26rpx;
}
.detail_box > view {
  display: flex;
  flex-direction: column;
  align-items: center;

}
.detail_box > view > text:first-child {
  font-size: 24rpx;
  margin-bottom: 20rpx;
  margin-top:20rpx;
  color: #999
}
.detail_box > view > text:last-child {
  margin-bottom: 20rpx;
}
.detail_box > view:last-child > text:last-child {
  color: rgb(58, 136, 224);
}
.detail_box > view:nth-child(2) > text:last-child {
  color: rgb(230, 112, 33);
}