/* pages/chooseGoods/index.wxss */
page {
  background: rgba(230, 227, 227, 0.192);
}
.container {
  display: flex;
  align-items: flex-start;
  /* padding: 0 30rpx; */
}
.goods {
  min-width: 30rpx;
  margin-right: 10rpx;
}
.activi {
  /* color: red; */
  color: #333;
  background: #fff;
}
.goods_info {
  display: flex;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  flex: 1;
  border-bottom: 1px solid rgba(211, 210, 210, 0.411);
}
.goods_info image{
  width: 140rpx;
  height: 140rpx;
  margin-right:20rpx;
  border-radius: 4rpx;
}
.goods_info > view {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods_info > view > text:last-child {
  color: #F0763C;
}