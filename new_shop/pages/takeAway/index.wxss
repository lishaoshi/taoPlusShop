/* pages/takeAway/index.wxss */
page {
  background:rgba(248,248,248,1);
}
.container {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  font-size:28rpx;
  margin-top: 38rpx;
}
.title {
  /* width: 100%; */
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  height: 80rpx;
  align-items: center;
  font-size: 28rpx;
  background:rgba(242,242,242,1);
  border-radius:12px 12px 0px 0px;
  color:rgba(102,102,102,1);
  margin-right: 1rpx;
}
.title > text:nth-child(2) {
  color:rgba(45,159,236,1);
  
}
.content {
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
  background: #fff;
}
.content > text:nth-child(1) {
  margin-top: 20rpx;
  line-height: 56rpx;
  color:rgba(153,153,153,1);
  font-size: 28rpx;
}
.input_box {
  display: flex;
  height: 108rpx;
  align-items: flex-end;
  font-size: 30rpx;
  font-weight:600;
  padding-bottom: 20rpx;
  border-bottom: 1px solid rgba(223, 221, 221, 0.205);
}
.input_box text {
  margin-bottom: 8rpx;
}
.input {
  width: 90%;
  height: 80%;
  padding-left: 10rpx;
  font-size: 78rpx;
}
.plce {
  font-size: 36rpx;
  font-weight:400;
}
.prompt {
  width: 100%;
  margin-top: 20rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  color:rgba(153,153,153,1);
}
.prompt > text {
  color:rgba(45,159,236,1);
}
.bottom_btn {
  margin: 80rpx 0;
}
.bankInfo {
  font-size: 28rpx;
  line-height: 56rpx;
  color:rgba(26,26,26,1)!important;
}