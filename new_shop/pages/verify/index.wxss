/* pages/verify/index.wxss */
.container {
  padding: 0 60rpx;
  /* display: flex; */
}
.title {
  font-size: 32rpx;
  color: rgb(240, 118, 62);
  margin-top: 60rpx;
  margin-bottom: 24rpx;
}
.scan_box {
  display: flex;
  border: 1px solid rgba(206, 205, 205, 0.664);
  align-items: center;
  padding: 20rpx 0 20rpx 20rpx;
    justify-content: space-around;
}
.scan_box image {
  width: 56rpx;
  margin-bottom: 10rpx;
  height: 56rpx;
}
.right {
  font-size: 22rpx;
  color: #666;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.input::after {
  content: '|'
}
.btn {
  margin-top: 88rpx;
  background: rgb(233, 119, 67);
  line-height: 66rpx;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
}