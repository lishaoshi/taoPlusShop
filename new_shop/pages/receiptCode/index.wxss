/* pages/receiptCode/index.wxss */
page {
  background: rgb(39, 91, 236);
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.container > view:first-child > image {
  width: 160rpx;
  height: 100rpx;
}
.fixedBg {
  width: 100%;
  position: absolute;
  height: 100%;
  top: 0;
  left: 0;
  z-index: -1;
}
.img-box {
  position: relative;
  width: 600rpx;
  margin: 0 auto;
  height: 600rpx;
  margin-top: 20rpx;
}
info {
  height: 100%;
}
.info > image:first-child {
  width: 70%;
  height: 70rpx;
  display: block;
  margin: 0 auto;
  margin-top: 40rpx;
}
.code{
  width: 370rpx;
  height: 370rpx;
  display: block;
  margin: 0 auto;
}
.info view:nth-of-type(1) {
  text-align: center;
}