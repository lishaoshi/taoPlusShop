/* pages/addBankCard/index.wxss */
page {
  background:rgba(248,248,248,1);
}
.container {
  display: flex;
  flex-direction: column;
}
.title {
  font-size:28rpx;
  color:rgba(102,102,102,1);
  line-height: 56rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
}
.info_box {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding:0 30rpx; 
  background: #fff;
}
.info_box > view {
  height: 120rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgba(224, 224, 224, 0.288);
}
.info_box > view:nth-child(1) > text:nth-child(1) {
  margin-right: 72rpx;
}
.info_box > view:nth-child(2) > text:nth-child(1) {
  margin-right: 72rpx;
}
.info_box > view > text:nth-child(1) {
  font-size:32rpx;
  color:rgba(77,77,77,1);
  margin-right: 40rpx;
}
.info_box > view:nth-child(1) > text:nth-child(2) {
  font-size:28rpx;
  color:rgba(153,153,153,1);
}

.info_box > view:nth-child(6){
  position: relative;
}

.place {
  font-size:28rpx;
  color:rgba(153,153,153,1);
}
.btn_box {
  /* width: 100%; */
  padding: 0 30rpx;
  margin-top: 82rpx;
}
.codes {
  position: absolute;
  right: 40rpx;
  z-index: 99;
  font-size:24rpx;
  width:160rpx;
  height:48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  /* vertical-align: middle; */
  text-align: center;
  border-radius:24rpx;
  color:rgba(153,153,153,1);
  border:2px solid rgba(230,230,230,1);
}
.getCode {
    color:rgba(254,156,4,1);
    border:2px solid rgba(254,156,4,1);
    background:rgba(250,135,4,0.1);
}
.hide {
    display: none !important;
    opacity: 0;
}
.bankName {
  display: flex;
  width: 500rpx;
  height: 100%;
}
.bankName > text {
  font-size: 32rpx;
  color: rgba(77,77,77,1);
  margin-right: 72rpx;
}
.bankName > view {
  font-size:28rpx;
  color:rgba(153,153,153,1);
  flex: 1;
  /* display: inline-block; */
}
.picker {
  width: 100%;
  /* height: 100%; */
  height: 120rpx;
  display: flex;
  align-items: center;
}