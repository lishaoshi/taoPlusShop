/* pages/lineUp/index.wxss */
.container {
  font-size: 24rpx;
}
.header {
  display: flex;
  justify-content: space-around;
}
.header > view {
  padding: 20rpx 0;
}
.activi {
  border-bottom: 1px solid rgb(47, 89, 226);
}
.title {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  align-items: center;
  background: rgba(212, 209, 209, 0.473);
}
.title image {
  width: 30rpx;
  height: 30rpx;
}
.title > view {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: center;
}
.info {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid rgba(199, 196, 196, 0.479);
}
.info > view {
  flex: 1;
  text-align: center;
}
.info > view:first-child {
  color: rgb(248, 102, 4);
  position: relative;
}
.will {
  color: #FFFFFF;
	position: absolute;
	top: 10rpx;
	right: 4rpx;
	background-color: #ff6b06;
	width: 36rpx;
	height: 18rpx;
	line-height: 18rpx;
	font-size: 12rpx;
	border-radius:8rpx ;
}
.next {
  position: absolute;
	bottom: 60rpx;
	left: 50%;
	text-align: center;
	width:150rpx;
	height: 150rpx;
	margin-left: -75rpx;
	border-radius: 50%;
	border: 1px solid #4581FE;
	z-index: 99999;
	padding: 6rpx;
}
.next image {
	width: 20rpx;
	height: 20rpx;
}
.next > view{
	background-color: #4581FE;
	color: #FFFFFF;
	border-radius: 50%;
	width: 100%;
	height: 100%;
	border: none;
	padding-top: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}