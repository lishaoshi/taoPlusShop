/**index.wxss**/
.conmtainer {
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
}
.heade {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}
.heade > view {
  display: flex;
  align-items: center;
}
.heade image {
  width: 66rpx;
  height: 66rpx;
  margin-right: 20rpx; 
  border-radius: 50%;
}
.wx-switch-input{
width:82rpx !important;
height:34rpx !important;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
width:80rpx !important;
height: 32rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
width: 40rpx !important;
height: 32rpx !important;
}
.arrow {
  border-top: 1px solid #000;
  border-right: 1px solid #000;
  width: 20rpx;
  height: 20rpx;
  margin-left: 96rpx;
  transform: rotate(45deg)
}

.today {
  /* height: 300rpx; */
   background: linear-gradient(to right, rgb(9, 107, 219) , rgb(87, 31, 219));
   border-radius:16rpx;
   margin-top: 10rpx;
   padding: 0 30rpx;
   color: #fff;
}
.today > view >image {
  width: 32rpx;
  height: 30rpx
}
.today > view {
  margin-top: 20rpx;
}
.today > view > text {
  font-size: 28rpx;
}
.today > text {
  font-size: 56rpx;
  /* font-weight: bold; */
  margin-bottom: 66rpx;
  display: block;
}
.icon_box {
  justify-content: space-around;
  margin-top: 40rpx;
  margin-bottom: 12rpx;
  
}
.icon_box image {
  width: 36rpx;
  height: 36rpx;
  margin-bottom: 10rpx;
}
.info {
  font-size: 20rpx;
  align-items: center;
  margin-top: 12rpx;
}
.business_box {
  width: 30%;
  align-items: center;
  font-size: 24rpx;
  line-height: 42rpx;
  /* border: 1px solid rgb(199, 196, 196); */
  padding-bottom: 20rpx;
}
.border_left {
  border-left: 1px solid rgb(223, 220, 220);
}
.border_right {
  border-right: 1px solid rgb(223, 220, 220);
}
.border_top {
  border-top: 1px solid rgb(223, 220, 220);
}
.border_bottom {
  border-bottom: 1px solid rgb(223, 220, 220);
}
.business_box > text:last-child {
  color: #999;
}
.business_box image {
  margin-bottom: 12rpx;
  margin-top: 62rpx;
  width: 42rpx;
  height: 42rpx;
}
.business {
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 20rpx;
  /* font-size: 24rpx; */
}
.getUserInfo{
	position: absolute;
	top: 0;
	right: 0;
	width: 100%;
	height: 100%;
	z-index: 5;
	opacity: 0;
}
