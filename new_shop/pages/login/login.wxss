/* pages/mine/bank/bank.wxss */
page {
  display: flex;
  flex-flow: column wrap;
  height: 100%;
  width: 100%;
}
.top{
  display: flex;
  flex-flow: column wrap;
  height: 15rem;
  width: 100%;
}

.top image{
  width: 100%;
}

.top .login_tab{
    color: white;
}

.title{
  display: flex;
  justify-content: center;
  margin-top: -10rem;
  height: 7rem;
  color: white;
  font-family: SimSun;
  font-size: 80rpx;
}

.tab_btn{
  display: flex;
  justify-content: space-between;
  height: 2rem;
  margin: 0rem 4rem;
  font-size: 50rpx;
}

.mid{
  display: flex;
  flex-flow: column nowrap;
}

.login_view{
  margin: 1rem 2rem;
}
.login_view >view,.register_view >view {
  border-bottom: 1px solid rgba(223, 220, 220, 0.493);
}
.login_view >view:nth-last-child(2) {
  border-bottom:0;
}

.register_view{
  margin: 1rem 2rem;
}

.register_view .code{
  display: flex;
  flex-flow: row nowrap;
}

.register_view .code text{
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  width: 7rem;
  border: 1px solid #999;
  font-size: 35rpx;
}

.mid input{
  font-size: 45rpx;
  margin-top: 1rem; 
}
.mobile {
  border-bottom: 1px solid rgba(223, 220, 220, 0.493);
}

.login_btn,.register_btn{
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100rpx;
    border-radius: 50rpx;
    background: #282828;
    font-size: 33rpx;
    color: #fff;
    text-align: center;
    margin-top: 3rem;
}

.forget{
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  font-size: 28rpx;
  color: rgba(124, 124, 124, 0.555);
}
.mobile,.password,.code {
  padding-bottom: 10rpx;
}



