<!--pages/login/login.wxml-->
<view class="container">

    <view class="top">
        <image src='../../img/header-bg.png' mode='scaleToFill'></image>
        <view class="title">淘上品</view>
        <view class="tab_btn">
            <view class="login_tab" bindtap='login' style="color:{{c_w}};">登录</view>
            <view class="reg_tab" bindtap='register' style="color:{{c_b}};">注册</view>
        </view>
    </view>

    <view class="mid">

        <view class="login_view" hidden="{{hidden_login}}">
            <view class="mobile">
                <input type='number' value="{{mobile}}" bindblur="getInputValue" data-flag="mobile" placeholder='手机号'></input>
            </view>

            <view class="password">
                 <input type='text' value="{{password}}" bindblur="getInputValue" data-flag="psw" password="true" placeholder='密码'></input>
            </view>

            <view class="forget">
                 <navigator url='../forget/forget'><view>忘记密码</view></navigator>
            </view>

            <view class="login_btn" bindtap="_login">
                 <view>登录</view>
            </view>
        </view>

        <view class="register_view" hidden="{{hidden_register}}">
            <view class="mobile">
                <input type='number' value="{{upMobile}}" bindblur="getInputValue" data-flag="upMobile" placeholder='手机号'></input>
            </view>

            <view class="code" >
                 <input type='number' value="{{vCode}}" bindblur="getInputValue" data-flag="code" placeholder='验证码'></input>
                 <text class="send_code" bindtap="getCode">{{code}}</text>
            </view>

            <view class="password">
                 <input type='text' value="{{upPsw}}" password="true" bindblur="getInputValue" data-flag="upPsw" placeholder='密码'></input>
            </view>

            <view class="register_btn" bindtap="_signup">
                 <view>注册</view>
            </view>
        </view>

    </view>

</view>
