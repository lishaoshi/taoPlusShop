var limitPrice = function (price, num=2) {
  if (price==null) {
    return 
  }
  if(price==0) {
    var new_price = '0.00'
    return new_price
  }
  return price.toFixed(price, num)
}

var imgUrl = function (path, flag=true) {
  if(!path) {
    return
  }
  var url = 'https://api.olb8.com'
  var imgPath
  if(flag) {
    imgPath = url + path+'.th'
  } else {
    imgPath = url + path
  }
  return imgPath
}


module.exports = {
  limitPrice: limitPrice,
  imgUrl: imgUrl
}